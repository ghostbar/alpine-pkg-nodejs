# Maintainer: Jose-Luis Rivas <me@ghostbar.co>
pkgname=nodejs
pkgver=7.7.1
pkgrel=0
pkgdesc='Evented I/O for V8 javascript'
url='https://nodejs.org/'
arch='all'
license='MIT'
makedepends="$depends_dev python openssl-dev zlib-dev libuv-dev
	linux-headers binutils-gold paxmark"
subpackages="$pkgname-dev $pkgname-doc"
source="https://nodejs.org/dist/v$pkgver/node-v$pkgver.tar.gz"
_builddir="$srcdir"/node-v$pkgver

prepare() {
  local i
  cd "$_builddir"
  for i in $source; do
    case $i in
      *.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
    esac
  done
}

build() {
  cd "$_builddir"
	./configure --prefix=/usr \
		--shared-zlib \
		--shared-libuv || return 1
	make || return 1
}

package() {
	local d
  cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	# paxmark so JIT works
	paxmark -m "$pkgdir"/usr/bin/node || return 1

	cp -pr "$pkgdir"/usr/lib/node_modules/npm/man "$pkgdir"/usr/share || return 1
	for d in doc html man; do
		rm -r "$pkgdir"/usr/lib/node_modules/npm/$d || return 1
	done
}

md5sums="559b29d57a5ad2bc04129d5f39b3ce5b  node-v7.7.1.tar.gz"
sha256sums="9e87ec5420d558ca9651d13b10dd4a1be954fea0fc7a909016a1cc4aedfa651c  node-v7.7.1.tar.gz"
sha512sums="d6d46247b2eaa327dbbead2f929beeba09930fe9aef350fc7dc7ec976dc1dbdbeae41074cdd3c2f6671ebe4a8a086b0491f97d0af38bda1506cea2eaa23b348a  node-v7.7.1.tar.gz"
